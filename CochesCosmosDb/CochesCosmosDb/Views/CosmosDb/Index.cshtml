@using CochesCosmosDb.Models
@model List<Vehiculo>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<a asp-controller="CosmosDb" asp-action="InsertarCoche" >Insertar COche</a>
@{ 
    Vehiculo car = ViewData["car"] as Vehiculo;
}

<form method="post">
    <button type="submit" class="btn btn-danger">Probar Azure Cosmos</button>
</form>
@if (Model.Count() > 0)
{
    <ul>
        @foreach (Vehiculo v in Model)
        {
            <li><a asp-controller="CosmosDb" asp-action="DetallesVehiculo" asp-route-idvehiculo="@v.Id">@v.ToString()</a></li>
        }
    </ul>
}


@if(car != null)
{
    <h2>@car.ToString()</h2>
}